<div class="twig clearfix">
    <div class="twig-left">
      <img src= "team.jpg" alt="はいけい" class="backgroung-image">
    </div>
    <div class="twig-right">
      <%= twigtweet.user.nickname %>
      <%= twigtweet.twigtext %>

          <ul class="more_list">
            <li>
              <%= link_to "詳細", "/twigs/#{twigtweet.id}/", method: :get %>
            </li>
            <% if user_signed_in? && current_user.id == twigtweet.user_id %>
            <li>
              <%= link_to "編集", "/twigs/#{twigtweet.id}/edit", method: :get %>
            </li>
            <li>
              <%= link_to "削除", "/twigs/#{twigtweet.id}", method: :delete %>
            </li>
          </ul>
          <div class="twig-comment">
           <% twigtweet.comments.each do |comment| %>
           <ul class="comment_list">
            <li>
           <%= comment.text %>
            </li>
           </ul>
           <% end %>
          </div>
       <% end %>
    </div>
</div>




